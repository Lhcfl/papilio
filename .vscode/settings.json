// Project recommended VSCode settings.
// if you want to override these settings, you may use `EditorConfig.EditorConfig` extension.
// or you can create an profile in your vscode.
{
	"i18n-ally.localesPaths": [
		"public/locales"
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
	},
	"files.eol": "\n",
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"javascript.preferences.importModuleSpecifier": "non-relative",
	"javascript.preferences.autoImportSpecifierExcludeRegexes": [
		"@radix-ui"
	],
	"typescript.preferences.autoImportSpecifierExcludeRegexes": [
		"@radix-ui"
	],
	"typescript.experimental.useTsgo": true,
	"i18n-ally.keystyle": "nested"
}
